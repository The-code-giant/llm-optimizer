{
  "family": "ai-seo-optimizer",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "redis:7-alpine",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6379,
          "protocol": "tcp"
        }
      ],
      "command": [
        "redis-server",
        "--appendonly",
        "yes",
        "--maxmemory",
        "256mb",
        "--maxmemory-policy",
        "allkeys-lru"
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "redis-cli ping"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-seo-optimizer",
          "awslogs-region": "{AWS_REGION}",
          "awslogs-stream-prefix": "redis"
        }
      }
    },
    {
      "name": "backend",
      "image": "{ACCOUNT_ID}.dkr.ecr.{AWS_REGION}.amazonaws.com/ai-seo-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "REDIS_HOST",
          "value": "localhost"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://localhost:6379"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:{AWS_REGION}:{ACCOUNT_ID}:secret:ai-seo/database-url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:{AWS_REGION}:{ACCOUNT_ID}:secret:ai-seo/jwt-secret"
        },
        {
          "name": "CLERK_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:{AWS_REGION}:{ACCOUNT_ID}:secret:ai-seo/clerk-secret"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:{AWS_REGION}:{ACCOUNT_ID}:secret:ai-seo/openai-key"
        },
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:{AWS_REGION}:{ACCOUNT_ID}:secret:ai-seo/anthropic-key"
        }
      ],
      "dependsOn": [
        {
          "containerName": "redis",
          "condition": "HEALTHY"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-seo-optimizer",
          "awslogs-region": "{AWS_REGION}",
          "awslogs-stream-prefix": "backend"
        }
      }
    }
  ]
} 